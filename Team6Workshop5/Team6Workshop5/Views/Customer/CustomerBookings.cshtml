
@model IEnumerable<Team6Workshop5.Models.NEWAccountBookings>


@{
    ViewBag.Title = "Pack";
}

<h2>Bookings Details</h2>


@* FOR PACKAGES *@

<h3 style="float:left">Packages</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PACKPkgName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PACKPkgBasePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PACKBookingId)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        if ((item.PACKProdName) != null)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PACKPkgName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PACKPkgBasePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PACKBookingId)
                </td>
            </tr>

        }
    }

</table>

@* FOR PACK TOTAL *@
<table class="table">
    <tr style="float:right">
        <th>
            @Html.DisplayNameFor(model => model.PACKTotal)
        </th>

        @foreach (var item in Model)
        {
            if ((item.PACKTotal) != null)
            {

                <td>
                    @Html.DisplayFor(modelItem => item.PACKTotal)
                </td>
            }
        }
    </tr>
</table>

@* FOR PRODUCTS *@
<h3 style="float:left">Products</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PRODProdName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PRODBasePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PRODBookingId)
        </th>
        <th></th>
    </tr>




    @foreach (var items in Model)
    {

        if ((items.PRODProdName) != null)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => items.PRODProdName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => items.PRODBasePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => items.PRODBookingId)
                </td>
            </tr>
        }
    }


</table>

@* FOR PACK TOTAL *@
<table class="table">
    <tr style="float:right">
        <th>
            @Html.DisplayNameFor(model => model.PRODTotal)
        </th>


        @foreach (var items in Model)
        {
            if ((items.PRODTotal) != null)
            {

                <td>
                    @Html.DisplayFor(modelItem => items.PRODTotal)
                </td>

            }
        }
    </tr>


</table>


